{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    // https://stackoverflow.com/questions/53113031/how-to-see-a-fully-expanded-typescript-type-without-n-more-and
    // show full types when hover over the type error
    "noErrorTruncation": true
  },
  "include": ["src/**/*"]
}
